<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen"
    android:background="@drawable/gradientlist"
    android:id="@+id/loginlayout">

    <!-- Initial sign up page if user does not have an account -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createaccount"
        android:text="Create An Account"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_margin="50dp"
        android:textStyle="italic"
        android:gravity="center"/>


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="#30ffffff"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_margin="30dp"
        android:layout_below="@+id/createaccount"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:background="#30ffffff"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_margin="30dp"
        android:layout_below="@+id/username"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/signinbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:layout_below="@id/haveaccount"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/haveaccount"
        android:text="Already Have An Account? Sign In Here:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:layout_below="@id/createaccountbutton"
        android:gravity="center"/>

    <Button
        android:id="@+id/createaccountbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_marginTop="10dp"
        android:layout_below="@id/password"
        android:layout_margin="10dp"/>


</RelativeLayout>